alias ga='git add .'
alias gc='GPG_TTY=$(tty) && git commit -S -m'
alias gb='git branch'
alias gam='GPG_TTY=$(tty) && git add . && git commit -S --amend'
alias gp='git push'
alias gpu='git push --set-upstream origin'
alias gco='git checkout -b'
alias gcob='git checkout'
alias dkls='docker container ls'
alias dkr='docker run -d'
alias dkex='docker container exec -it'
alias dkrm='docker container rm --force'
alias gob='go build -o main'
alias kdev='kubectl config use-context cake-dev'
alias kqa='kubectl config use-context cake-qa'
alias kstg='kubectl config use-context cake-stage'
alias kprod='kubectl config use-context cake-prod'
alias gomod='go mod tidy && go mod vendor'
alias v='nvim'
alias rf='GOPROXY=proxy.golang.org go run github.com/GoogleCloudPlatform/artifact-registry-go-tools/cmd/auth@latest refresh'
alias grb='GPG_TTY=$(tty) && git rebase'
alias gcrp='GPG_TTY=$(tty) && git cherry-pick'
